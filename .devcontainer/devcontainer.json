{
    "name": "Swift 5.10-Ubuntu 22.04",
    "image": "swift:5.10-jammy",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "false",
            "upgradePackages": "false"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "os-provided",
            "ppa": "false"
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "lldb.library": "/usr/lib/liblldb.so"
            },
            "extensions": [
                "sswg.swift-lang",
                "vadimcn.vscode-lldb",
                "eamodio.gitlens",
                "github.vscode-github-actions"
            ]
        }
    },
    "postCreateCommand": "swift --version"
}
